<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="2dp"
    android:padding="15dp"
    android:background="@color/colorMyPrimary">

    <Button
        android:id="@+id/bEditGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:text="Edit"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:textAllCaps="false"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvGroupSubjectsNumber"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"/>



    <ImageView
        android:id="@+id/ivPencil"
        android:layout_toLeftOf="@id/tvGroupSubjectsNumber"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/pencil"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>

    <ImageView
      android:id="@+id/ivAddUserToGroup"
      android:layout_toLeftOf="@id/ivPencil"
      android:src="@drawable/ic_add_circle_outline_black_24dp"
      android:textColor="@color/colorBlack"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginRight="10dp"
      android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Nazwa Grupy"
        android:textSize="20dp"
        android:maxLength="50"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"/>

</RelativeLayout>
