<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomToolBarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorMyPrimaryDark</item>
    </style>

    <style name="DeleteButton" parent="AppTheme">
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="CancelButton" parent="AppTheme">
        <item name="colorAccent">#ee0000</item>
    </style>

</resources>
